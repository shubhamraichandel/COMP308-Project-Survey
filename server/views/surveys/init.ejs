<% include ../partials/header.ejs %>

    <div class="container">
      <div class="row text-light">
        <div class="col-md-offset-3 col-md-6">
          <h3 class="text-center text-info">Let's get started</h3>
           
          <form class="form" method="post">

              <div class="form-group">
                <label class="h4" for="NameTextField">Survey Topic</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Please enter survey topic" name="topic" value="" required>
              </div> 

              

            
            <div class="form-group"> 
                <label class="h4" for="NameTextField">Choose Your Survey Template</label>         
                <select class="form-control" name="type">
                    <option value="1">Multiple Choice</option>
                    <option value="2">Agree/Disagree</option>
                    <option value="3">Short Answer</option>
                </select>
            </div>


            

            <div class="form-group">
                <label class="h4" for="NameTextField">Number of questions</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Number of questions" name="numberOfQuestion" value="" required>
            </div>
            
<div class="container text-center ">
              <button type="submit" class="btn btn-outline-primary">Next</button>
              <a href="/" class="btn btn-outline-warning">Cancel</a>
</div>         
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>