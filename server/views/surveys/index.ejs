<% include ../partials/header.ejs %>
    <div class="container text-light">
      
        <div class=" col col-md-offset-2 col-center col-md-6 ">
          <h3 class="text-info text-center">Surveys List </h3>
          <br>
          <table class="table table-bordered table-striped text-light">
            <tr>
              <th class="text-center">Survey Topic</th>
              <th class="text-center"></th>
            </tr>      
            <% for (let count = 0; count < surveys.length; count++) { %>
            <tr>
              <td class="text-center"><%= surveys[count].topic %></td>
              <td class="text-center">
              <a href="/surveys/response/<%= surveys[count]._id %>" class="btn btn-primary">
              <i class="fa fa-pencil-square-o"></i> Response</a>
               </td>
            </tr>
            <% } %>
          </table>
        </div>
      </div>
   

<% include ../partials/footer.ejs %>


